// File: prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model HarvestLoad {
  uid             String   @id @default(uuid())
  Vintrace_ST     String
  Block           String
  Tons            Float
  Press           String
  Tank            String
  WO              String
  Date_Received   String
  AgCode_ST       String
  Time_Received   String
  Wine_Type       String
  Est_Tons_1      Float
  Est_Tons_2      Float
  Est_Tons_3      Float
  Press_Pick_2    String
  Linked          String
  Crush_Pad       String
  Status          String
  last_modified   DateTime @updatedAt
  synced          Boolean  @default(false)
}


model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
}
